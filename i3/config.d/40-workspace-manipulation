# switch to workspace
bindcode $mod+$numlock+$KP_1 workspace $workspace1
bindcode $mod+$numlock+$KP_2 workspace $workspace2
bindcode $mod+$numlock+$KP_3 workspace $workspace3
bindcode $mod+$numlock+$KP_4 workspace $workspace4
bindcode $mod+$numlock+$KP_5 workspace $workspace5
bindcode $mod+$numlock+$KP_6 workspace $workspace6
bindcode $mod+$numlock+$KP_7 workspace $workspace7
bindcode $mod+$numlock+$KP_8 workspace $workspace8
bindcode $mod+$numlock+$KP_9 workspace $workspace9
bindcode $mod+$numlock+$KP_0 workspace $workspace10
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+Shift+1 workspace $workspace6
bindsym $mod+Shift+2 workspace $workspace7
bindsym $mod+Shift+3 workspace $workspace8
bindsym $mod+Shift+4 workspace $workspace9
bindsym $mod+Shift+5 workspace $workspace10

# move focused container to workspace
bindcode $mod+Shift+$numlock+$KP_1 move container to workspace $workspace1
bindcode $mod+Shift+$numlock+$KP_2 move container to workspace $workspace2
bindcode $mod+Shift+$numlock+$KP_3 move container to workspace $workspace3
bindcode $mod+Shift+$numlock+$KP_4 move container to workspace $workspace4
bindcode $mod+Shift+$numlock+$KP_5 move container to workspace $workspace5
bindcode $mod+Shift+$numlock+$KP_6 move container to workspace $workspace6
bindcode $mod+Shift+$numlock+$KP_7 move container to workspace $workspace7
bindcode $mod+Shift+$numlock+$KP_8 move container to workspace $workspace8
bindcode $mod+Shift+$numlock+$KP_9 move container to workspace $workspace9
bindcode $mod+Shift+$numlock+$KP_0 move container to workspace $workspace10
bindsym $mod+6 move container to workspace $workspace1
bindsym $mod+7 move container to workspace $workspace2
bindsym $mod+8 move container to workspace $workspace3
bindsym $mod+9 move container to workspace $workspace4
bindsym $mod+0 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

# switch to workspace relative
bindsym $mod+Shift+Tab workspace next
bindsym $mod+Tab workspace prev

# Move workspaces between monitors.
bindsym $mod+Shift+Prior move workspace to output left
bindsym $mod+Shift+Next move workspace to output right
bindsym $mod+Ctrl+Prior move container to output left
bindsym $mod+Ctrl+Next move container to output right
